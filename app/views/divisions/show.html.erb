<table border=1>
  <tr>
    <td>#</td>
    <td>Team</td>
    <td>Win</td>
    <td>Loss</td>
    <td>ELO</td>
  </tr>

  <% @teams.each_with_index do |t, i| %>
    <tr>
      <td><%= i + 1 %></td>
      <td><%= t.name %></td>
      <td><%= t.league_record(@division)[:wins] %></td>
      <td><%= t.league_record(@division)[:losses] %></td>
      <td><%= t.elo_cache %></td>
    </tr>
  <% end %>
</table>
