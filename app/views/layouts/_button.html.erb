<% if params[:current_season] %>
  <%= button_to 'All Teams',
                teams_path,
                method: :get,
                class: 'btn btn-info',
                id: 'season-btn' %>
<% else  %>
  <%= button_to 'Current Season',
                teams_path,
                method: :get,
                class: 'btn btn-info',
                id: 'season-btn',
                params: { current_season: true } %>
<% end %>