<div class="row">
  <div class="col-lg-4 lower-third">
    <table class="table">
        <tr class="l3-match">
          <% @games.each do |g| %>
            <td class="l3-match-gap" rowspan=1>
            </td>
            <td class="l3-game-name <%= g.next_hammer == "black" ? "l3-black" : "l3-yellow" %>" colspan=1>
              <%= g.match.comment %>
            </td>
            <td class="l3-frame <%= g.next_hammer == "black" ? "l3-black" : "l3-yellow" %>" colspan=2>
              <% if g.complete? %>
                FINAL
              <% else %>
                <%= g.next_frame.ordinalize %> Frame
              <% end %>
            </td>
            <td class="l3-divider" rowspan=3>
            </td>
          <% end %>
        </tr>

        <tr class="l3-player-one">
          <% @games.each do |g| %>
            <td class="l3-player-name" colspan=2>
              <%= g.yellow_team.name %>
            </td>
            <td class="l3-hammer">
              <% if g.complete? || g.next_hammer == "black" %>
                <%= image_tag "yellow_disc.svg", height: "40px" %>
              <% else %>
                <%= image_tag "yellow_disc_hammer.svg", height: "40px" %>
              <% end %>
            </td>
            <td class="l3-score">
              <% if g.frames && g.frames.any? %>
                <%= g.frames.last[0] %>
              <% end %>
            </td>
          <% end %>
        </tr>

        <tr class="l3-player-two">
          <% @games.each do |g| %>
            <td class="l3-player-name" colspan=2>
              <%= g.black_team.name %>
            </td>
            <td class="l3-hammer">
              <% if g.complete? || g.next_hammer == "yellow" %>
                <%= image_tag "black_disc.svg", height: "40px" %>
              <% else %>
                <%= image_tag "black_disc_hammer.svg", height: "40px" %>
              <% end %>
            </td>
            <td class="l3-score">
              <% if g.frames && g.frames.any? %>
                <%= g.frames.last[1] %>
              <% end %>
            </td>
          <% end %>
        </tr>
    </table>
  </div>
</div>
