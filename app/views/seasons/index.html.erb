<% provide :title, 'Seasons' %>
<div class="row">
  <div class="col-lg-6 offset-lg-3">
    <table class="table">
      <tr>
        <td>Season</td>
        <td>Start</td>
        <td>Banquet</td>
        <td></td>
      </tr>

      <% @seasons.each do |s| %>
        <tr>
          <td><%= link_to s.name, season_path(s.id) %></td>
          <td><%= s.start_date %></td>
          <td><%= s.banquet_date %></td>
          <td><%= s.report? ? link_to('<i class="fas fa-file-alt"></i> Report'.html_safe, season_report_path(s.id)) : '' %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
