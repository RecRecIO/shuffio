<% provide :title, @season.name %>
<h3><%= @season.name %></h3>

<div class="row">
  <% if @monday_divisions.size == 2 %>
    <div class="col-lg-2"></div>
  <% end %>
  <% @monday_divisions.each do |d| %>
    <div class="col-lg-4">
      <%= render partial: 'layouts/rank_board', locals: {
        title: "#{d.name} Division",
        link: division_path(d),
        teams: d.sorted_teams,
        rank_widths: rank_board_width(true, true, @show_elo, @show_elo_change)
      } %>
    </div>
  <% end %>
</div>

