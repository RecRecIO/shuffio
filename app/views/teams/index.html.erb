<% provide :title, 'Top Teams' %>
<div class="row">
  <div class="col-lg-2 offset-lg-5">
    <% if params[:current_season] %>
      <%= button_to 'All Teams',
                    teams_path,
                    method: :get,
                    class: 'btn btn-info',
                    id: 'season-btn' %>
    <% else  %>
      <%= button_to 'Current Season',
                    teams_path,
                    method: :get,
                    class: 'btn btn-info',
                    id: 'season-btn',
                    params: { current_season: true } %>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-lg-6 offset-lg-3">
    <%= render partial: 'layouts/rank_board', locals: {
      title: "Team",
      teams: @teams.first(50),
      division: nil
    } %>
  </div>
</div>
