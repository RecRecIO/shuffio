<div class="row">
  <div class="col-lg-4 offset-lg-4">
    <h2>Sign in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control', placeholder: 'moonshooter@example.com' %>
      </div>

      <div class="form-group">
        <%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: 'current-password', class: 'form-control', placeholder: 'Hope you remembered it!' %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-group">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.submit 'Sign in', class: 'btn btn-info' %> or
        <%= link_to('<i class="fab fa-google"></i> Sign in with Google'.html_safe, user_google_oauth2_omniauth_authorize_path, class: 'btn btn-danger') %><br />
      </div>
    <% end %>

    <hr>

    <%= render "users/shared/links" %>
  </div>
</div>
